{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "groupName": "asdf",
      "matchManagers": ["asdf"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major", "digest"],
      "matchDepTypes": ["devDependencies", "action"],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest",
        "lockFileMaintenance"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
